<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/screenBackground"
    tools:context=".content.screens.drawermenu.SettingsScreen">

    <TextView
        android:id="@+id/idLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Language"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backBtnSettings" />

    <Spinner
        style="@style/SpinnerStyle"
        android:id="@+id/idSpinnerLang"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_spinner"
        android:dropDownVerticalOffset="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idTextSettings" />


    <ImageView
        android:id="@+id/backBtnSettings"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/card_back"
        android:clickable="true"
        android:focusable="true"
        android:foregroundGravity="center"
        android:padding="4dp"
        android:src="@drawable/back_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idTextSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/backBtnSettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/backBtnSettings" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/idAppName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idLanguage">

        <TextView
            android:id="@+id/idPrivacyPolicy"
            style="@style/textViewBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/theme_stroke_bg"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:text="Privacy Policy"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idTermsAndConditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textViewBackground"
            android:background="@drawable/theme_stroke_bg"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:text="Terms and conditions"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idCommunityStandards"
            style="@style/textViewBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/theme_stroke_bg"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:text="Community standards"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            style="@style/textViewBackground"
            android:id="@+id/idFrequentQuestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/theme_stroke_bg"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:text="Frequent questions"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            style="@style/textViewBackground"
            android:id="@+id/idContactUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/theme_stroke_bg"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:text="Contact us"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            style="@style/textViewBackground"
            android:id="@+id/idAboutApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/theme_stroke_bg"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:text="About the app"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            style="@style/textViewBackground"
            android:id="@+id/idTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/theme_stroke_bg"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:text="Theme"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:id="@+id/idAppName"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#92C6C6C6"
        android:gravity="center"
        android:text="Ren's Healthy Food"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/appVersion" />

    <TextView
        android:id="@+id/appVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#92C6C6C6"
        android:padding="10dp"
        android:text="App version"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>