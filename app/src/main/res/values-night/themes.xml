<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RensHomemadeFood" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:textColor">@color/beige_rose</item>
    </style>

    <style name="appBackground">
        <item name="android:background">@drawable/radial_gradient_bg</item>
    </style>

    <style name="btnStyle">
        <item name="android:background">@drawable/btn_profile_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="screenBackground">
        <item name="android:background">@color/black</item>
    </style>
    
    <style name="textViewBackground">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:backgroundTint">@color/spinner_dark_color</item>
    </style>

    <style name="appName">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="headerStyle">
        <item name="android:background">@drawable/header_gradient_bg</item>
    </style>

    <style name="drawerNavigationColor">
        <item name="android:background">@drawable/nav_menu_bg</item>
    </style>
</resources>