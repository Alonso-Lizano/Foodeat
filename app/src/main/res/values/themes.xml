<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RensHomemadeFood" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/beige_rose</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="Theme.RensHomemadeFood" parent="Base.Theme.RensHomemadeFood" />

    <style name="appBackground">
        <item name="android:background">@drawable/radial_gradient_bg</item>
    </style>

    <style name="btnStyle">
        <item name="android:background">@drawable/btn_profile_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="ratingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">#4D000000</item>
        <item name="colorControlActivated">@color/green_light</item>
    </style>

    <style name="screenBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="appToolbar">
        <item name="android:background">@color/beige_rose</item>
    </style>

    <style name="headerStyle">
        <item name="android:background">@drawable/header_gradient_bg</item>
    </style>

    <style name="NavigationViewStyle" parent="Widget.Design.NavigationView">
        <item name="android:background">@drawable/nav_menu_bg</item>
    </style>
</resources>